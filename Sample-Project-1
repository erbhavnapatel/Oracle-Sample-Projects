BEGIN
    id_Samiksha := get_person_details ('Samiksha');
    DBMS_OUTPUT.PUT_LINE('ID fo Samiksha: ' || id_Samiksha);
END;
*/

DECLARE
    id_Lajree NUMBER := 0;
BEGIN
    id_Lajree := get_person_details ('Lajree');
    DBMS_OUTPUT.PUT_LINE('ID fo Lajree: ' || id_Lajree);
END;
