/*
CREATE OR REPLACE FUNCTION get_person_details (
    in_first_name NVARCHAR2
)
RETURN NUMBER
IS
    id NUMBER := 0;
BEGIN
    --get id
    SELECT person_id
    INTO id
    FROM persons
    WHERE first_name = in_first_name;
    
    --return id
    RETURN id;
END;
*/

